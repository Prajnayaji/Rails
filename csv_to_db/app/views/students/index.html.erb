<h1>Upload Your CSV File</h1>
<%= form_with( url: "/upload", local: true) do |form| %>
<div>
<%= form.label :csv_file %>
<%= form.file_field :csv_file %>
</div>
<%= form.submit %>
<% end %>
<br><br><br>
<table>
<thead>
<tr>
<th>Serial Number</th>
<th>Roll Number</th>
<th>Name</th>
<th>Address</th>
<th>Marks</th>
</tr>

</thead>

<tbody>
<% @students.each do |student,i| %>
<tr>
<td> <%= @students.index(student) + 1 %> </td>
<td> <%= student.roll_no %></td>
<td> <%= student.name %></td>
<td> <%= student.address %> </td>
<td> <%= student.marks %> </td>
</tr>
<% end %>
</tbody>
</table>
